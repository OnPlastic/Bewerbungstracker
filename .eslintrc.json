{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "double"],
    "semi": ["error", "always"]
  },
  "globals": {
    "Logger": "readonly",
    "DriveApp": "readonly",
    "SpreadsheetApp": "readonly",
    "Tasks": "readonly"
  }
}
